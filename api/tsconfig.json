{
  "version": "3.2.2",
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2015", "es2016","esnext.asynciterable"],
    "target": "es6",
    "types": ["node", "mocha"],
    "skipLibCheck": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
]
}